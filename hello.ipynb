static void displayGridLine() {
    System.out.println("+---------------+---------+-----+----------+");
}

static void displayProductGridHeader() {
    displayGridLine();
    System.out.println("| Product       | € Unit  | Qty |   price  |");
    displayGridLine();
}

static void displayProductGridFooter(double total) {
    displayGridLine();
    System.out.printf("                                | %7.2f€ |\n", total);
    System.out.println("                                +----------+");
}